# System

alias ll='ls -la'


# GitHub

alias gh="echo $(git config remote.origin.url) | sed 's#.*:#http://github.com/#g' | xargs open"


# Git
alias gf='git fetch --all'
alias gmo='git merge origin $1'
alias gmos='git add -A && git stash && git merge origin $1 && git stash pop'
alias gro='git rebase origin $1'
alias grom='git rebase origin master'
alias gmom='git merge origin master'
alias gmt='git mergetool'
alias gs='git status'
alias gc='git commit -a'
alias gca='git commit -a --amend'
alias gcam='git commit -am $1'
alias gal='git add -A'

# Vagrant

alias vinit='vagrant init'
alias vup='vagrant up'
alias vdestroy='vagrant destroy'
alias vreload='vagrant reload'
alias vprovision='vagrant provision'
alias vhalt='vagrant halt'
alias vsuspend='vagrant suspend'
alias vssh='vagrant ssh'


# Ssh-Agent

alias ssh-ls='ssh-add -l'
alias ssh-gh='ssh-add ~/.ssh/git_rsa'
alias ssh-fxsandbox='ssh-add ~/.ssh/fxsandbox_rsa'


# Virtalenv Wrapper Aliases

alias mkenv='mkvirtualenv $1'
alias rmenv='rmvirtualenv $1'
alias chenv='workon $1'
alias denv='deactivate'
alias lsenv='lsvirtualenv'

# Misc
alias devbot-update='pip install --upgrade git+ssh://git@github.com/blitzagency/agency-automation-tools.git#egg=agency'
